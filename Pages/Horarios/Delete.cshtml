@page
@model EduCenterManagerDB.Pages.Horarios.DeleteModel
@{
    ViewData["Title"] = "Eliminar Horario";
}

<h1>Eliminar Horario</h1>

<div class="alert alert-danger">
    <h3>¿Está seguro que desea eliminar este horario?</h3>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Curso</dt>
            <dd class="col-sm-9">@Model.Horario.Curso?.NombreCurso</dd>

            <dt class="col-sm-3">Día de la Semana</dt>
            <dd class="col-sm-9">@Model.Horario.DiaSemana</dd>

            <dt class="col-sm-3">Hora de Inicio</dt>
            <dd class="col-sm-9">@Model.Horario.HoraInicio.ToString("HH:mm")</dd>

            <dt class="col-sm-3">Hora de Fin</dt>
            <dd class="col-sm-9">@Model.Horario.HoraFin.ToString("HH:mm")</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Horario.IdHorario" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>