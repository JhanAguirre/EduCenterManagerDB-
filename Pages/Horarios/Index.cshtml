@page
@model EduCenterManagerDB.Pages.Horarios.IndexModel
@{
    ViewData["Title"] = "Horarios";
}

<h1>Horarios</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nuevo Horario
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Curso</th>
            <th>Día</th>
            <th>Hora Inicio</th>
            <th>Hora Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var horario in Model.Horarios)
        {
            <tr>
                <td>@horario.Curso?.NombreCurso</td>
                <td>@horario.DiaSemana</td>
                <td>@horario.HoraInicio.ToString("HH:mm")</td>
                <td>@horario.HoraFin.ToString("HH:mm")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@horario.IdHorario" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@horario.IdHorario" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>