@page
@model EduCenterManagerDB.Pages.Calificaciones.DeleteModel
@{
    ViewData["Title"] = "Eliminar Calificación";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que deseas eliminar esta calificación?</h3>
<div>
    <h4>Calificación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion.Estudiante.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion.Estudiante.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion.Estudiante.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion.Estudiante.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion.Curso.NombreCurso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion.Curso.NombreCurso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion.Nota)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion.Nota)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calificacion.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion.Fecha)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Calificacion.IdCalificacion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la lista</a>
    </form>
</div>