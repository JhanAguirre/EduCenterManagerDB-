@page
@model EduCenterManagerDB.Pages.Calificaciones.EditModel
@{
    ViewData["Title"] = "Editar Calificación";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Calificacion.IdCalificacion" />
            <div class="form-group">
                <label asp-for="Calificacion.Estudiante" class="control-label"></label>
                <select asp-for="Calificacion.IdEstudiante" class="form-control" asp-items="ViewBag.Estudiantes"></select>
                <span asp-validation-for="Calificacion.IdEstudiante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.Curso" class="control-label"></label>
                <select asp-for="Calificacion.IdCurso" class="form-control" asp-items="ViewBag.Cursos"></select>
                <span asp-validation-for="Calificacion.IdCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.Nota" class="control-label"></label>
                <input asp-for="Calificacion.Nota" class="form-control" />
                <span asp-validation-for="Calificacion.Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.Fecha" class="control-label"></label>
                <input asp-for="Calificacion.Fecha" class="form-control" />
                <span asp-validation-for="Calificacion.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}