@page
@model EduCenterManagerDB.Pages.Calificaciones.CreateModel
@{
    ViewData["Title"] = "Ingreso Calificaciones";
}

<h1>Crear Calificación</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Calificacion.IdEstudiante" class="control-label">Estudiante</label>
                <select asp-for="Calificacion.IdEstudiante" class="form-control" asp-items="ViewBag.Estudiantes">
                    <option value="">-- Seleccione un estudiante --</option>
                </select>
                <span asp-validation-for="Calificacion.IdEstudiante" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Calificacion.IdCurso" class="control-label">Curso</label>
                <select asp-for="Calificacion.IdCurso" class="form-control" asp-items="ViewBag.Cursos">
                    <option value="">-- Seleccione un curso --</option>
                </select>
                <span asp-validation-for="Calificacion.IdCurso" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Calificacion.Nota" class="control-label">Nota</label>
                <input asp-for="Calificacion.Nota" class="form-control" type="number" step="0.1" min="0" max="10" />
                <span asp-validation-for="Calificacion.Nota" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Calificacion.Fecha" class="control-label">Fecha</label>
                <input asp-for="Calificacion.Fecha" class="form-control" type="date" />
                <span asp-validation-for="Calificacion.Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}