@page
@model EduCenterManagerDB.Pages.Profesores.CreateModel
@{
    ViewData["Title"] = "Crear Profesor";
}

<h1>Crear Profesor</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Profesor.Nombre" class="control-label">Nombre</label>
                <input asp-for="Profesor.Nombre" class="form-control" />
                <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Profesor.Apellido" class="control-label">Apellido</label>
                <input asp-for="Profesor.Apellido" class="form-control" />
                <span asp-validation-for="Profesor.Apellido" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Profesor.Especialidad" class="control-label">Especialidad</label>
                <input asp-for="Profesor.Especialidad" class="form-control" />
                <span asp-validation-for="Profesor.Especialidad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Profesor.Email" class="control-label">Email</label>
                <input asp-for="Profesor.Email" class="form-control" type="email" />
                <span asp-validation-for="Profesor.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Profesor.Telefono" class="control-label">Teléfono</label>
                <input asp-for="Profesor.Telefono" class="form-control" />
                <span asp-validation-for="Profesor.Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}